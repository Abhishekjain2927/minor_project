<%= search_form_for @q do |f| %>
<%= f.label :search %>
<%= f.search_field :first_name_or_city_or_specalist_in_cont %>
<%= f.submit %>
<%end%>
<p id="notice"><%= notice %></p>

<h1>Doctors</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Mobile number</th>
      <th>Specalist in</th>
      <th>Gender</th>
      <th>City</th>
      <th>State</th>
      <th>Address</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.first_name %></td>
        <td><%= doctor.last_name %></td>
        <td><%= doctor.email %></td>
        <td><%= doctor.mobile_number %></td>
        <td><%= doctor.specalist_in %></td>
        <td><%= doctor.gender %></td>
        <td><%= doctor.city %></td>
        <td><%= doctor.state %></td>
        <td><%= doctor.address %></td>

<td><%= link_to 'detail',doctor %></td>
<td><%= link_to 'Edit',edit_doctor_path(doctor) %></td>
<td><%= link_to 'Destroy',doctor_path(doctor),
method: :delete,
data: {confirm: 'Are you sure?'}%></td>


      </tr>
    <% end %>
  </tbody>
</table>

